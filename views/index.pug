extends layout

block content
  h1= title
  p Welcome to #{title}
  p hello world 
  button(type="button", class="btn btn-info", onClick="doBump()") Press me 
  div(id="bumps") Bump the count 
  script. 
    var count = 0
    var bump = 1
    function doBump(){
      count += bump 
      bump += 1
      
      document.getElmentById("bumps").innerHTML = "Count "+count + " Bump"+bump
     }